[bar/top]
width = 100%
height = 24
offset-x = 0
offset-y = -1 
;bottom = true

monitor = "DVI-I-1"
#monitor = "VGA-1"
background = #5a000000
foreground = #eee

;underline-size = 0
;underline-color = #eee

spacing = 1
padding-left = 0
padding-right = 0
module-margin-left = 0 
module-margin-right = 0

font-0 = Noto Sans:pixelsize=10;2
font-1 = FontAwesome:size=12;3
;font-2 = siji:pixelsize=10;3

modules-left = ewmh 
modules-center = xwindow
modules-right = volume wlan arch-updates mpd date powermenu

override-redirect = false

;tray-position = right
;tray-padding = 2
;tray-background = #66333333

; MODULES

[module/ewmh]
type = internal/xworkspaces

icon-0 = web;
icon-1 = music;
icon-2 = terminal;
icon-3 = code;
icon-4 = files;
icon-5 = video;
icon-default = 
;                

; Only show workspaces defined on the same output as the bar
;
; Useful if you want to show monitor specific workspaces
; on different bars
;
; Default: false
pin-workspaces = true

; Create click handler used to focus desktop
; Default: true
enable-click = true

; Create scroll handlers used to cycle desktops
; Default: true
enable-scroll = false

; Available tags:
;   <label-monitor>
;   <label-state> - gets replaced with <label-(active|urgent|occupied|empty)>
; Default: <label-state>
format = <label-state>

; Available tokens:
;   %name%
; Default: %name%
label-monitor = %name%

; Available tokens:
;   %name%
;   %icon%
;   %index%
; Default: %icon%  %name%
label-active = %icon%
label-active-background = #88000000
label-active-padding = 2

; Available tokens:
;   %name%
;   %icon%
;   %index%
; Default: %icon%  %name%
label-occupied = %icon%
label-occupied-padding = 2

; Available tokens:
;   %name%
;   %icon%
;   %index%
; Default: %icon%
label-urgent = %icon%
label-urgent-padding = 2

; Available tokens:
;   %name%
;   %icon%
;   %index%
; Default: %icon%  %name%
label-empty = %icon%
label-empty-foreground = #44ffffff
label-empty-padding = 2

[module/xwindow]
type = internal/xwindow
label = %title:0:120:...%
label-padding = 4

[module/date]
type = internal/date
interval = 1.0

; See "man date" for details on how to format the date string
; NOTE: if you want to use syntax tags here you need to use %%{...}
;date = %a %b %d, 

; Optional time format
time = %H:%M

; if `date-alt` or `time-alt` is defined, clicking
; the module will toggle between formats
date-alt = %A, %d %B %Y
time-alt = %H:%M:%S

label = %date% %time%
format =    <label>
;format-background = #ddffffff
format-background = #88000000
;format-foreground = #333
format-padding = 3

[module/padding]
type = custom/text
content = 	 
content-foreground = #00000000
content-background = #55000000

;[module/battery]
;type = internal/battery

;full-at = 99

;battery = BAT0
,adapter = AC0

;poll-interval = 5

;format-charging = <animation-charging>  <label-charging>
;format-discharging = <ramp-capacity>  <label-discharging>
;format-full = <ramp-capacity>  <label-full>
;label-charging = %percentage%
;label-discharging = %percentage%
;label-full = %percentage%
;format-charging-padding = 3
;format-discharging-padding = 3
;format-full-padding = 3

;ramp-capacity-0 = 
;ramp-capacity-1 = 
;ramp-capacity-2 = 
;ramp-capacity-3 = 
;ramp-capacity-4 = 

;animation-charging-0 = 
;animation-charging-1 = 
;animation-charging-2 = 
;animation-charging-3 = 
;animation-charging-4 = 
;animation-charging-framerate = 750

;[module/backlight]
;type = internal/backlight

;card = intel_backlight
;enable-scroll = true

;format = <ramp> <label>
;label = %percentage%

;ramp-0 = 🌕
;ramp-1 = 🌔
;ramp-2 = 🌓
;ramp-3 = 🌒
,ramp-4 = 🌑

[module/volume]
type = internal/alsa

format-volume = <ramp-volume>  <label-volume>
format-muted = <label-muted>
label-volume = %percentage%
label-muted =   muted
label-muted-foreground = #aaa
format-volume-padding = 3
format-muted-padding = 3

ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 
ramp-headphones-0 = 

[module/powermenu]
type = custom/menu

label-open =   
;label-open-background = #dd0000
;label-open-foreground = #fff
label-close = cancel
;label-close-background = #dd0000
;label-close-foreground = #fff
label-open-padding = 4 
label-close-padding = 3 

label-separator = |
label-separator-foreground = #00000000

menu-0-0 = reboot
menu-0-0-exec = menu-open-1
menu-0-1 = power off
menu-0-1-exec = menu-open-2
menu-0-0-padding = 3
menu-0-1-padding = 3

menu-1-0 = reboot?  
menu-1-0-exec = systemctl reboot
menu-1-0-padding = 3

menu-2-0 = power off?  
menu-2-0-exec = systemctl poweroff
menu-2-0-padding = 3

[module/mpd]
type = internal/mpd

host = 127.0.0.1
port = 6600
password = 

; Seconds to sleep between progressbar/song timer sync
; Default: 1
interval = 2

; Available tags:
;   <label-song> (default)
;   <label-time>
;   <bar-progress>
;   <toggle> - gets replaced with <icon-(pause|play)>
;   <toggle-stop> - gets replaced with <icon-(stop|play)>
;   <icon-random>
;   <icon-repeat>
;   <icon-repeatone>
;   <icon-prev>
;   <icon-stop>
;   <icon-play>
;   <icon-pause>
;   <icon-next>
;   <icon-seekb>
;   <icon-seekf>
format-online = <label-song>

; Available tokens:
;   %artist%
;   %album%
;   %date%
;   %title%
; Default: %artist% - %title%
label-song =     %artist% - %title%
format-online-padding = 3

;click-left = xdotool set_desktop 1

[module/wlan]
type = internal/network
;interface = enp0s3
interface = enp0s31f6
interval = 3.0

format-connected = <label-connected>
format-disconnected = <label-disconnected>
label-connected =  %downspeed:9%
label-connected-padding = 2
label-disconnected-padding = 2
label-disconnected = not connected

[module/arch-updates]
type = custom/script
exec = ~/.bin/arch-updates.sh
interval = 5

format = <label>
;format-foreground = #a00909
format-padding = 2

label = %output%

click-left = termite -e ~/.bin/update-system